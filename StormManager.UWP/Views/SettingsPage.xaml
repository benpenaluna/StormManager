                                <GradientStop Offset="1" Color="{Binding Color, ElementName=AgingJobColorPickerButton, Mode=OneWay}"/>
                            </GradientStopCollection>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <StackPanel Margin="10" Width="300">
                    <TextBlock Text="{x:Bind Category}" FontSize="16" Margin="10,10,10,0" TextAlignment="Left" />
