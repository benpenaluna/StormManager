                    <CheckBox Content="Is Used?" IsChecked="{x:Bind IsUsed, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Margin="10" Width="120">
                    <controls:ColorPickerButton Name="NewJobColorPickerButton"
                                                Content="New Job" 
                                                Color="{x:Bind NewJobColorWindowUi, Mode=TwoWay}"
